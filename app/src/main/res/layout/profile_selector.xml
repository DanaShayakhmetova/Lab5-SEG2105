<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="327dp"
        android:layout_height="109dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/france"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_fr"
            android:contentDescription="France"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />

        <ImageView
            android:id="@+id/egypt"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_eg"
            android:contentDescription="Egypt"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />

        <ImageView
            android:id="@+id/canada"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_ca"
            android:contentDescription="Canada"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="324dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/spain"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_sp"
            android:contentDescription="Spain"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />

        <ImageView
            android:id="@+id/korea"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_kr"
            android:contentDescription="Korea"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />

        <ImageView
            android:id="@+id/japan"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_jp"
            android:contentDescription="Japan"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="327dp"
        android:layout_height="102dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/turkey"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_tr"
            android:contentDescription="Turkey "
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />

        <ImageView
            android:id="@+id/uk"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_uk"
            android:contentDescription="The United Kingdom "
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />

        <ImageView
            android:id="@+id/usa"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/flag_us"
            android:contentDescription="The United States of America"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:onClick="setProfilePicture" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="123dp"
        android:layout_height="29dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/titleAvatar"
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Select a new avatar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>